<h2>Login</h2>

<!-- Print out any error message for the user -->
<% if flash[:error] %>
    <br>
    <strong><%= flash[:error] %></strong>
    <br>
<% end %>
<%= form_tag login_path do %>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
    <br>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <br>
    <%= submit_tag 'Login' %>
<% end %>